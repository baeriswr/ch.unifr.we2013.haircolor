<% provide(:title, 'Home') %>
<h1>Welcome to the Hair-Color-Style-Ingredient-Application!</h1>

<div class="articles">
  <% if !@articles.blank? %>
	 <% @articles.each do |article| %>
		<%= link_to image_tag("articles/" + article.image, :alt => article.name, :class => "home"), article_path(article) %>
	 <% end %>
  <% end %>
</div>

<div class="search">


  <%= form_tag search_articles_path, :method => "get" do %>
	 <%= label_tag(:q, "Search:") %>
	 <%= text_field_tag :search, params[:search] %>
	 <%= submit_tag "Search", :name => nil %>
  <% end %>

</div>





<div class="ingredients">
  <% if !@ingredients.blank? %>
	 <% @ingredients.each do |ingredient| %>
		<%= link_to image_tag("ingredients/" + ingredient.structure, :alt => ingredient.inci_name, :class => "home"), ingredient_path(ingredient) %>
	 <% end %>
  <% end %>
</div>

<div class="atom">


</div>

