<% provide(:title, 'Home') %>
<h1>Welcome to the Hair-Color-Style-Ingredient-Application!</h1>



<div class="search">
  <%= form_tag("/search", method: "post") do %>
	 <%= label_tag(:q, "Search:") %>
	 <%= text_field_tag(:q) %>
	 <%= submit_tag("Search") %>
  <% end %>
</div>

<div class="ingredients">
  <% if !@ingredients.blank? %>
	 <% @ingredients.each do |ingredient| %>
		<%= image_tag "ingredients/" + ingredient.structure, :alt => ingredient.inci_name, :class => "home" %>
	 <% end %>
  <% end %>
</div>

<div class="atom">


</div>



