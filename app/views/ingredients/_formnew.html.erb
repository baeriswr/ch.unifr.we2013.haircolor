<%= nested_form_for @ingredient, :html => { :class => "form-horizontal" } do |f| %>

        <% if @ingredient.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited
                this ingredient from being saved:</h2>
              <ul>
                <% @ingredient.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

		  <div class="form-group">
			 <%= f.label 'inci_name', 'Ingridient Name:', class: "col-sm-2 control-label" %>
			 <div class="col-sm-10">
				<%= f.text_field 'inci_name', class: "form-control" %>
			 </div>
        </div>

        <div class="form-group">
            <%= f.label 'formula', 'Formula:', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
				  <%= f.text_field 'formula', class: "form-control" %>
				</div>
        </div>

        <div class="form-group">
            <%= f.label 'cas_number', 'CAS Number:', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
				  <%= f.text_field 'cas_number', class: "form-control" %>
				</div>
        </div>

        <div class="form-group">
            <%= f.label 'ec_number', 'EC Number:', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
				  <%= f.text_field 'ec_number', class: "form-control" %>
				</div>
        </div>

        <div class="form-group">
            <%= f.label 'molecular_weight', 'Molecular Weight:', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
				  <%= f.text_field 'molecular_weight', class: "form-control" %>
				</div>
        </div>

        <div class="form-group">
          <%= f.label 'structure', 'Structure:', class: "col-sm-2 control-label" %>
			 <div class="col-sm-10">
				<%= f.text_field 'structure', class: "form-control" %>
			 </div>
        </div>

        <div class="form-group">
			 <div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Submit", class: "btn btn-primary" %>
			 </div>
		  </div>
<% end %>